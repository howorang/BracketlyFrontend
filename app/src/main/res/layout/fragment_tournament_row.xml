<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/view_time_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/event_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-12" />

        <TextView
            android:id="@+id/event_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00" />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toEndOf="@id/view_time_holder"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_centerVertical="true"
        android:text="name" />

    <ImageView
        android:id="@+id/tournament_status_icon"
        android:layout_width="@dimen/player_result_icon_size"
        android:layout_height="@dimen/player_result_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tournament_owner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toEndOf="@id/view_time_holder"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_centerVertical="true"
        android:text="@string/owner" />
</RelativeLayout>
