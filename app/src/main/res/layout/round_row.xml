<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_one_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1" />

        <ImageView
            android:id="@+id/player_one_result_icon"
            android:layout_width="@dimen/player_result_icon_size"
            android:layout_height="@dimen/player_result_icon_size" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/vs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_two_result_icon"
            android:layout_width="@dimen/player_result_icon_size"
            android:layout_height="@dimen/player_result_icon_size" />

        <TextView
            android:id="@+id/player_two_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2" />
    </LinearLayout>

</LinearLayout>
